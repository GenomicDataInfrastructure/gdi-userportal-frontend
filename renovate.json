{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "depTypeList": ["devDependencies", "require-dev"],
      "updateTypes": ["patch", "minor", "major"],
      "groupName": "devDependencies"
    },
    {
      "description": "Group React monorepo packages together",
      "matchPackageNames": [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom"
      ],
      "depTypeList": ["dependencies", "devDependencies", "overrides"],
      "groupName": "react monorepo",
      "groupSlug": "react-monorepo"
    },
    {
      "description": "Trigger fix release for patch updates",
      "automerge": true,
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automergeType": "branch"
    }
  ],
  "extends": [
    "config:base",
    ":preserveSemverRanges",
    ":dependencyDashboard",
    ":rebaseStalePrs",
    ":enableVulnerabilityAlertsWithLabel('security')",
    "group:recommended"
  ]
}
